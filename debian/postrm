#!/bin/sh
# postrm script for #PACKAGE#
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

remove_for_real() {
	app="oneslip-$1.desktop"
	favicon="$2.png"
	
	if [ -e "/etc/skel/.local/share/applications/$app" ]; then
		rm /etc/skel/.local/share/applications/$app
	fi
	if [ -e "/etc/skel/.oneslip/favicons/$favicon" ]; then
		rm /etc/skel/.oneslip/favicons/$favicon
	fi
}

remove() {
	# Ensure we remove our things in /etc/skel even if we don't purge...
	remove_for_real Twitter twitter.com
	remove_for_real YouTube youtube.com
	remove_for_real Tetris htmltetris.com
	remove_for_real Facebook facebook.com
}


case "$1" in
    purge|remove|failed-upgrade|abort-install|abort-upgrade|disappear)
    remove

    ;;

    upgrade)
    echo "* Package upgrade; skipping postrm.";;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
